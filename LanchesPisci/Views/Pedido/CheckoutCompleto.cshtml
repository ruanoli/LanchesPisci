@model Pedido

<div class="container">
    <div class="jumbotron">
        <h2>@ViewBag.MensagemCheckoutCompleto</h2>
    </div>

    <div class="card">
       <div class="card-body">
           <p>Cliente: <strong>@Model.Nome</strong></p>
           <p>Data do pedido: <strong>@Model.PedidoEnviado</strong></p>
           <p>Número do pedido: <strong>@Model.PedidoId</strong></p>

           <table class="table">
               <tr>
                   <th></th>
                   <th>Quantidade</th>
                   <th>Lanche</th>
                   <th>Preço</th>
               </tr>

               @foreach(var item in @Model.PedidoItens){
                   <tr>
                       <td><img src="@item.Lanche.ImagemUrl" width="40px" height="40px"/></td>
                       <td>@item.Quantidade</td>
                       <td>@item.Lanche.LancheNome</td>
                       <td>@item.Lanche.Preco</td>
                   </tr>
               }
           </table>

           <h4>Valor total do pedido: <strong>@(((decimal)ViewBag.TotalPedido).ToString("C2"))</strong></h4>
       </div>
    </div>
</div>

<div class="form-group" style="text-align: center">
    <h3><a class="nav-link text-info" asp-controller="Home" asp-action="Index">Retornar</a></h3>
</div>